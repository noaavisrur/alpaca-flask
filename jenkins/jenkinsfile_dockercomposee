pipeline {
    agent any

    environment {
        repositoryName = 'flask-compose'
        dockerHubUsername = 'noaavisrur'
        test_server = '44.211.190.202' 
        prod_server = '44.212.67.12'
    }

    stages {
        stage('Clean up & clone') {
            steps {
                sh 'sudo rm -rf *'
                sh 'git clone https://github.com/noaavisrur/flask-project.git'
            }
        }
        
        stage('Build and Push Docker Image') {
            steps {
                dir('flask-project/jenkins') {
                    sh "python3 versions-compose.py"
                }
            }
        }
        
        stage('Deploy Docker into EC2 Test-Servers') {
            steps {
                // Configure AWS credentials
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'noaavisrur']]) {
                    // Install AWS CLI (if not already installed)
                    sh 'pip install awscli --upgrade --user'
                    // Start EC2 instance
                    sh 'aws ec2 start-instances --instance-ids i-09b5c69cd4a5a0695 --region us-east-1'
                    sh "scp -i ${env.ssh_key} /var/lib/jenkins/workspace/docker_compose_flask/flask-project/flask+DB/docker-compose.yml ec2-user@${env.test_server}:/home/ec2-user"
                    sshagent(['noaavisrurssh']) {
                        script {
                            def sshCommand = "ssh -i ${env.ssh_key} -o StrictHostKeyChecking=no ec2-user@${env.test_server}"
                            
                            sh """
                                ${sshCommand} sudo dnf update -y
                                ${sshCommand} sudo dnf install docker -y
                                ${sshCommand} sudo service docker start
                                ${sshCommand} sudo systemctl start docker
                                ${sshCommand} sudo dnf install -y python3-pip 
                                ${sshCommand} pip install mysql-connector-python
                                ${sshCommand} sudo usermod -a -G docker ec2-user
                                ${sshCommand} docker rm -f my-container || true
                                ${sshCommand} docker-compose up -d
                            """
                        }
                    }
                }
            }
        }
        
        stage('Testing') {
            steps {
                // Configure AWS credentials
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'noaavisrur']]) {
                    sh "scp -i ${env.ssh_key} /var/lib/jenkins/workspace/docker_compose_flask/flask-project/jenkins/compose_test_script.sh ec2-user@${env.test_server}:/home/ec2-user"

                    sshagent(['noaavisrurssh']) {
                        script {
                            def sshCommand = "ssh -i ${env.ssh_key} -o StrictHostKeyChecking=no ec2-user@${env.test_server}"
                            def testResult = sh(script: "${sshCommand} bash /home/ec2-user/compose_test_script.sh ${env.test_server}", returnStatus: true)
                            if (testResult != 0) {
                                error("Testing failed. Aborting deployment.")
                            }
                        }
                    }
                }
            }
        }

        stage('Deploy to production') {
            steps {
                // Configure AWS credentials
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'noaavisrur']]) {
                    // Start EC2 instance
                    sh 'aws ec2 start-instances --instance-ids i-09e50d587ef089b33 --region us-east-1'
                    sh "scp -i ${env.ssh_key} /var/lib/jenkins/workspace/docker_compose_flask/flask-project/flask+DB/docker-compose.yml ec2-user@${env.prod_server}:/home/ec2-user"
                    sshagent(['noaavisrurssh']) {
                        script {
                            def sshCommand = "ssh -i ${env.ssh_key} -o StrictHostKeyChecking=no ec2-user@${env.prod_server}"
                            
                            sh """
                                  ${sshCommand} sudo dnf update -y
                                ${sshCommand} sudo dnf install docker -y
                                ${sshCommand} sudo service docker start
                                ${sshCommand} sudo systemctl start docker
                                ${sshCommand} sudo dnf install -y python3-pip 
                                ${sshCommand} pip install mysql-connector-python
                                ${sshCommand} sudo usermod -a -G docker ec2-user
                                ${sshCommand} docker rm -f my-container || true
                                ${sshCommand} docker-compose up -d
                            """
                        }
                    }
                }
            }
        }
  }
}
  
